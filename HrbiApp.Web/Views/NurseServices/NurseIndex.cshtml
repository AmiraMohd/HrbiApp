@model IEnumerable<HrbiApp.Web.Models.NurseServices.NurseListModel>

@{
    ViewData["Title"] = "Index";
}

<div class="app-title">
    <div>
        <h1><i class="fa fa-file-text-o"></i> @HrbiApp.Web.Resource.ResourceAr.Nurses</h1>

    </div>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-title-w-btn">
                <h3 class="title"> <p>@*<a class="btn btn-primary icon-btn" href=""><i class="fa fa-plus"></i>@Tzwed.Web.Resource.ResourceAr.Add	</a>*@</p></h3>
            </div>
            <div class="tile-body">
                <p>
                    <a asp-action="CreateNurse">@HrbiApp.Web.Resource.ResourceAr.Add</a>
                </p>
                <table class="table dataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Experiance)
                            </th>
                            <th>@HrbiApp.Web.Resource.ResourceAr.Control</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Experiance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.ActionLink(HrbiApp.Web.Resource.ResourceAr.Update, "UpdateNurse", new { nurseID=item.ID }) |
                                    @if (item.Status == Consts.Active)
                                    {
                                        @Html.ActionLink(HrbiApp.Web.Resource.ResourceAr.DeActivate, "DeActivate", new { nurseID=item.ID })
                                    }
                                    else
                                    {
                                        @Html.ActionLink(HrbiApp.Web.Resource.ResourceAr.Activate, "Activate", new { nurseID=item.ID })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
