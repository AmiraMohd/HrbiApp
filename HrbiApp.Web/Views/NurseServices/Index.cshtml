@model IEnumerable<HrbiApp.Web.Models.NurseServices.NurseServicesListModel>

@{
    ViewData["Title"] = "Index";
}

<div class="app-title">
    <div>
        <h1><i class="fa fa-file-text-o"></i> @HrbiApp.Web.Resource.ResourceAr.NurseServices</h1>

    </div>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-title-w-btn">
                <h3 class="title"> <p>@*<a class="btn btn-primary icon-btn" href=""><i class="fa fa-plus"></i>@Tzwed.Web.Resource.ResourceAr.Add	</a>*@</p></h3>
            </div>
            <div class="tile-body">
<p>
    <a asp-action="Create">@HrbiApp.Web.Resource.ResourceAr.Add</a>
</p>
                <table class="table dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceNameAR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceNameEN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
                            <th>@HrbiApp.Web.Resource.ResourceAr.Control</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceNameAR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceNameEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    @Html.ActionLink(HrbiApp.Web.Resource.ResourceAr.Update, "Update", new { serviceId=item.ID }) |
                    @if (item.Status == Consts.Active)
                    {
                        @Html.ActionLink(HrbiApp.Web.Resource.ResourceAr.DeActivate, "DeActivateService", new { serviceId=item.ID })
                    }
                    else
                    {
                        @Html.ActionLink(HrbiApp.Web.Resource.ResourceAr.Activate, "ActivateService", new { serviceId=item.ID })
                    }
            </td>
        </tr>
}
    </tbody>
</table>
</div>
        </div>
    </div>
</div>
