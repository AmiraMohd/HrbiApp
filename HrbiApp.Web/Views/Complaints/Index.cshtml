@model IEnumerable<HrbiApp.Web.Models.Complaints.ComplaintsListModel>

@{
    ViewData["Title"] = "Index";
}

<div class="app-title">
    <div>
        <h1><i class="fa fa-file-text-o"></i> @Localizer["Complaints"]</h1>

    </div>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-title-w-btn">
                <h3 class="title"> <p>@*<a class="btn btn-primary icon-btn" href=""><i class="fa fa-plus"></i>@Tzwed.Web.Resource.ResourceAr.Add	</a>*@</p></h3>
            </div>
            <div class="tile-body">
                <p>
                </p>
                <table class="table dataTable">
                    <thead>
                        <tr>
                            <th class="text-nowrap">
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserPhone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserEmail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Text)
                            </th>
                            <th class="text-nowrap">
                                @Html.DisplayNameFor(model => model.CreateDate)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserPhone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserEmail)
                                </td>
                                <td style="word-break: break-word; vertical-align: top;white-space: normal !important;">
                                    @Html.DisplayFor(modelItem => item.Text)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
