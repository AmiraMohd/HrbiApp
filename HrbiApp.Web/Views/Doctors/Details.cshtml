@model HrbiApp.Web.Models.Doctors.DoctorDetailsModel

@{
    ViewData["Title"] = "Details";
}
<div class="app-title">
    <div>
        <h1><i class="fa fa-file-text-o"></i> @Model.Name</h1>

    </div>

</div>
<div class="row user">

    
    <div class="col-md-3">
        <div class="tab-content">
            <div class="tab-pane active" id="user-timeline">
                <div class="timeline-post">
                    <img class="w-100 p-3" src="@Model.Image" />
                    <div class="post-content">
                        <table class="table">
                            
                            <tbody>
                                
                                <tr>
                                    <td><strong>@Localizer["Phone"]</strong></td>
                                    <td>@Model.Phone</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["Price"]</strong></td>
                                    <td>@Model.Price</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["Status"]</strong></td>
                                    <td>@Model.Status</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["Address"]</strong></td>
                                    <td>@Model.Address</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["OpenTime"]</strong></td>
                                    <td>@Model.OpenTime</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["CloseTime"]</strong></td>
                                    <td>@Model.CloseTime</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["PositionNameAR"]</strong></td>
                                    <td>@Model.PositionNameAR</td>

                                </tr>

                                <tr>
                                    <td><strong>@Localizer["PositionNameEN"]</strong></td>
                                    <td>@Model.PositionNameEN</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["SpecializationNameAR"]</strong></td>
                                    <td>@Model.SpecializationNameAR</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["Instructions"]</strong></td>
                                    <td>@Model.Instructions</td>
                                </tr>
                               
                            </tbody>
                        </table>
                    </div>
                    
                </div>

            </div>

        </div>
    </div>

    

    <div class="col-md-9">
        <div class="tab-content">
            <div class="tab-pane active" id="user-timeline">
                <div class="timeline-post">
                    <div class="post-media">
                        <a href="#"></a>
                        <div class="content">
                            <h5>@HrbiApp.Web.Resource.ResourceAr.Payments</h5>

                        </div>
                    </div>
                    <div class="post-content">
                        <partial name="_DoctorPayments.cshtml" model="Model.Payments" />
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<div style="text-align:left">
    <a asp-action="Index">
        <button class="btn btn-outline-secondary" type="button">
            @HrbiApp.Web.Resource.ResourceAr.Back<i class="fa fa-share" aria-hidden="true"></i>
        </button>
    </a>
</div>
