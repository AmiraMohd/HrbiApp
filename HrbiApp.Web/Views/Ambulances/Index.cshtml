@model IEnumerable<HrbiApp.Web.Models.Ambulances.AmbulancesListModel>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hospital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                    @Html.ActionLink("Update", "Update", new { ambulanceID=item.ID }) |
                    @if (item.Status == Consts.Active)
                    {
                        @Html.ActionLink("DeActivate", "DeActivate", new { ambulanceID=item.ID })
                    }
                    else
                    {
                        @Html.ActionLink("Activate", "Activate", new { ambulanceID=item.ID })
                    }
            </td>
        </tr>
}
    </tbody>
</table>
