@model IEnumerable<HrbiApp.Web.Models.Services.ServicesListModel>

@{
    ViewData["Title"] = "Index";
}

<div class="app-title">
    <div>
        <h1><i class="fa fa-file-text-o"></i> @HrbiApp.Web.Resource.ResourceAr.Services</h1>

    </div>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-title-w-btn">
                <h3 class="title"> <p>@*<a class="btn btn-primary icon-btn" href=""><i class="fa fa-plus"></i>@Tzwed.Web.Resource.ResourceAr.Add	</a>*@</p></h3>
            </div>
            <div class="tile-body">
                
                <table class="table dataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NameAR)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NameEN)
                            </th>
                            <th>@HrbiApp.Web.Resource.ResourceAr.Control</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NameAR)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NameEN)
                                </td>
<td>
                                    @if (item.Status == Consts.Active)
                                    {
                                        @Html.ActionLink(HrbiApp.Web.Resource.ResourceAr.DeActivate, "DeActivate", new { serviceId=item.ID })
                                    }
                                    else
                                    {
                                        @Html.ActionLink(HrbiApp.Web.Resource.ResourceAr.Activate, "Activate", new { serviceId=item.ID })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>